// Haal het canvas element op
var canvas = document.getElementById('myCanvas');
var ctx = canvas.getContext('2d');

// Functie om een regenboogkleurige cirkel te tekenen op de gegeven positie (x, y)
function drawRainbowCircle(x, y) {
  var radius = 50; // Straal van de cirkel
  var colors = ['#FF0000', '#FF7F00', '#FFFF00', '#00FF00', '#0000FF', '#4B0082', '#9400D3']; // Regenboogkleuren

  // Loop door de kleuren en teken secties van de cirkel met verschillende kleuren
  for (var i = 0; i < colors.length; i++) {
    // Bepaal begin- en eindhoeken voor de huidige sectie van de cirkel
    var startAngle = (i * Math.PI * 2) / colors.length;
    var endAngle = ((i + 1) * Math.PI * 2) / colors.length;

    // Teken de sectie van de cirkel met de huidige kleur
    ctx.beginPath();
    ctx.moveTo(x, y);
    ctx.arc(x, y, radius, startAngle, endAngle);
    ctx.fillStyle = colors[i];
    ctx.fill();
    ctx.closePath();
  }
}

// Event listener om de muispositie te volgen en de tekening bij te werken
canvas.addEventListener('mousemove', function(event) {
  // Bepaal de muispositie ten opzichte van het canvas
  var rect = canvas.getBoundingClientRect();
  var mouseX = event.clientX - rect.left;
  var mouseY = event.clientY - rect.top;

  // Wis het canvas
  ctx.clearRect(0, 0, canvas.width, canvas.height);

  // Teken de regenboogkleurige cirkel op de positie van de muis
  drawRainbowCircle(mouseX, mouseY);
});
